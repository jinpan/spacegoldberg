green = #00FF27
gray = #3A3838
border_radius = 10px

body
	background-color #000
	font-family: 'Roboto', sans-serif;
	font-family: 'Maven Pro', sans-serif;
	font-size 18px

#viewport
	background url("images/stars-bg.jpg")
	margin 0 auto

.ui.dimmer > .content
	width 800px
	margin 0 auto

	h1
		font-family: 'Audiowide', cursive;
		font-size 48px

	.proceed-msg
		text-transform uppercase
		margin-top 50px
		display block

	.instructions
		padding 10px
		border 1px solid #fff

#nextlevel
#gameover
	font-size 36px
	font-family 'Audiowide', cursive
	text-transform uppercase

.story
	height 500px

.story-img
	height 250px

.story-nav
	color green
	text-decoration none
	font-size: 1.2em;
	font-family: 'Audiowide', cursive;

	&:hover
		text-shadow: 0 0 0.2em #fff

.next
#next-level
	float right

.previous
	float left

#proceed-btn
#start-btn
	position absolute
	font-family 'Audiowide', cursive
	text-transform uppercase
	font-size 18px
	color green
	z-index 5

#proceed-btn
	right 20px

#start-btn
	width 280px
	-webkit-border-radius border_radius
	-moz-border-radius border_radius 
	border-radius border_radius
	margin 20px auto
	background-color gray
	left 0
	right 0
	cursor pointer

	&:hover
		background-color #ccc
		color #000